        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/assets/styles.css")
    body 
        header.header 
            ul.menus 
                li.menus__item 
                    a(href="/") HOME
                if loggedIn
                    li.menus__item 
                        a(href="/logout") LOGOUT 
                    li.menus__item 
                        a(href="/board/list") BOARD
